#footer
	width 100%
	background-image: linear-gradient( 0deg, rgba(55,80,100, .8) 0%, rgba(9,32,63, .8) 100%);
	padding 40px 0
	text-align center
	h5
		font-size: 24px;
		font-family: "GeometriaBold";
		color: rgb(255, 255, 255);
		line-height: 1
		margin-bottom 15px
	p
	#conditions
		font-size: 14px;
		font-family: "RobotoRegular", sans-serif;
		color: rgb(254, 254, 254);
		line-height: 1.7
	#conditions
		text-decoration underline
		&:hover
		&:focus
			text-decoration none
.soc_buttons
	width 60%
	margin: 0 auto
	a
		display: inline-block
		margin: 0 18px 20px
		position relative
		z-index: 1
		.fa
			width: 30px;
			height: 30px;
			background-image linear-gradient(to top,#ff7458, #f09819)
			color #3E5D73
			font-size 20px
			line-height 30px
			border-radius 50%
			&:hover
				background-image linear-gradient(to bottom,#ff7458, #f09819)